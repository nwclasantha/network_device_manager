{
    "logging": {
        "level": "INFO",
        "max_log_files": 30,
        "log_format": "%(asctime)s - [%(levelname)8s] - %(name)s - %(message)s",
        "date_format": "%Y-%m-%d %H:%M:%S"
    },
    "appearance": {
        "theme": "dark",
        "color_theme": "blue"
    },
    "paths": {
        "logs_dir": "logs",
        "config_dir": "config",
        "templates_dir": "templates",
        "exports_dir": "exports"
    }
}